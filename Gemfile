source 'https://rubygems.org'

# == Sinatra core
gem 'sinatra'
gem 'sinatra-activerecord'
gem 'sinatra-assetpack', :require => 'sinatra/assetpack'
gem 'slim'

# == Frontend
gem 'sass'

group :development do
  gem 'thin'
  gem 'pry'

  gem 'capistrano', '~> 3.1'
  gem 'capistrano-bundler'
  gem 'capistrano-rvm'
end

group :test do
  gem 'rspec'
  gem 'capybara'
end
